<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>LogViewer</display-name>
  <servlet>
    <servlet-name>logviewer-servlet</servlet-name>
    <servlet-class>com.kulaviak.logviewer.LogViewerServlet</servlet-class>
    <init-param>
      <param-name>directoryPath</param-name>
      <param-value>c:/</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>logviewer-servlet</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
</web-app>
